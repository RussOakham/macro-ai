{
	"$schema": "http://json.schemastore.org/package",
	"private": true,
	"name": "macro-ai",
	"type": "module",
	"workspaces": [
		"apps/*",
		"packages/*",
		"infrastructure",
		"tests/*"
	],
	"scripts": {
		"commit": "cz",
		"build": "turbo run build",
		"build:types": "turbo run build --filter=@repo/macro-ai-api-client",
		"dev": "turbo run dev --env-mode=loose",
		"dev:types": "turbo run dev --filter=@repo/macro-ai-api-client",
		"clean:types": "turbo run clean --filter=@repo/macro-ai-api-client",
		"generate:types": "turbo run generate --filter=@repo/macro-ai-api-client",
		"db:generate:express-api": "pnpm --filter @repo/express-api db:generate",
		"db:push:express-api": "pnpm --filter @repo/express-api db:push",
		"lint": "turbo run lint",
		"lint:fix": "turbo run lint:fix",
		"lint:ci": "turbo run lint:ci",
		"lint:oxlint": "oxlint",
		"lint:fix:oxlint": "oxlint --fix",
		"lint:ci:oxlint": "oxlint --max-warnings=0",
		"lint:eslint": "turbo run lint:eslint",
		"lint:fix:eslint": "turbo run lint:fix:eslint",
		"lint:ci:eslint": "turbo run lint:ci:eslint",
		"lint:md": "markdownlint-cli2 \"**/*.md\" \"!**/node_modules/**\" \"!.codeql/**\" \"!.tools/**\"",
		"lint:md:fix": "markdownlint-cli2 --fix \"**/*.md\" \"!**/node_modules/**\" \"!.codeql/**\" \"!.tools/**\"",
		"lint:yaml": "node scripts/yaml-lint.js",
		"lint:yaml:fix": "node scripts/yaml-lint.js --fix",
		"lint:yaml:js": "node scripts/yaml-lint.js",
		"knip": "knip",
		"knip:production": "knip --production",
		"coverage": "node scripts/coverage-report.js",
		"coverage:markdown": "node scripts/coverage-report.js --markdown",
		"coverage:json": "node scripts/coverage-report.js --json",
		"coverage:sanitize": "node scripts/sanitize-coverage-paths.js",
		"coverage:express-api": "pnpm --filter @repo/express-api test:coverage",
		"coverage:api-client": "pnpm --filter @repo/macro-ai-api-client test:coverage",
		"coverage:client-ui": "pnpm --filter client-ui test:coverage",
		"format": "prettier --check --cache .",
		"format:fix": "prettier --write --cache .",
		"format:md": "pnpm lint:md:fix",
		"ui": "pnpm --filter client-ui dev",
		"api": "pnpm --filter @repo/express-api dev",
		"test": "turbo run test",
		"test:ui": "turbo run --filter @repo/express-api test:ui",
		"test:coverage": "turbo run test:coverage",
		"test:coverage:report": "pnpm test:coverage && node config/coverage-badge.config.cjs",
		"test:coverage:open": "pnpm test:coverage && open apps/express-api/coverage/index.html",
		"test:coverage:ci": "turbo run test:coverage --reporter=json",
		"test:coverage:analyze": "node scripts/analyze-coverage-gaps.cjs",
		"test:report": "node scripts/test-automation-utils.cjs report",
		"test:aggregate": "node scripts/test-automation-utils.cjs aggregate",
		"test:optimize": "node scripts/test-automation-utils.cjs optimize",
		"test:flaky": "node scripts/test-automation-utils.cjs flaky",
		"test:integration": "cd tests/integration && pnpm test",
		"test:integration:full": "cd tests/integration && ./run-integration-tests.sh",
		"test:integration:parameter-store": "./tests/integration/run-parameter-store-integration.sh",
		"test:integration:staging": "cd tests/integration && TEST_ENVIRONMENT=staging ./run-integration-tests.sh",
		"test:integration:production": "cd tests/integration && TEST_ENVIRONMENT=hobby ./run-integration-tests.sh",
		"type-check": "turbo run type-check",
		"prepare": "husky",
		"act": "./.act/run-fast.sh",
		"act:job": "./.act/run-fast.sh job",
		"security:scan": "snyk test && snyk code test && pnpm lint:eslint",
		"security:scan:advanced": "snyk test && snyk code test && pnpm lint:eslint",
		"security:scan:deps": "snyk test",
		"security:scan:code": "snyk code test",
		"security:scan:secrets": "snyk code test --severity-threshold=medium",
		"security:scan:monitor": "snyk monitor",
		"security:scan:workflows": "actionlint -color",
		"security:scan:eslint": "pnpm lint:eslint",
		"security:scan:eslint:only": "pnpm lint:eslint"
	},
	"devDependencies": {
		"@eslint/js": "^9.34.0",
		"@faker-js/faker": "^10.0.0",
		"actionlint": "^2.0.6",
		"@prettier/plugin-oxc": "^0.0.4",
		"@repo/config-testing": "workspace:*",
		"@types/node": "catalog:",
		"@vitest/coverage-v8": "catalog:",
		"@vitest/ui": "^3.2.4",
		"commitizen": "^4.3.1",
		"cz-conventional-changelog": "^3.3.0",
		"drizzle-kit": "^0.31.4",
		"eslint": "catalog:",
		"eslint-config-flat-gitignore": "^2.1.0",
		"eslint-plugin-array-func": "^5.0.2",
		"eslint-plugin-eslint-comments": "^3.2.0",
		"eslint-plugin-no-secrets": "^2.2.1",
		"eslint-plugin-oxlint": "catalog:",
		"eslint-plugin-perfectionist": "^4.15.0",
		"eslint-plugin-security": "^3.0.1",
		"eslint-plugin-security-node": "^1.1.4",
		"eslint-plugin-sonarjs": "^3.0.5",
		"eslint-plugin-tailwindcss": "^3.18.2",
		"eslint-plugin-testing-library": "^7.6.8",
		"eslint-plugin-vitest": "^0.5.4",
		"eslint-plugin-yml": "^1.18.0",
		"glob": "^11.0.3",
		"husky": "^9.1.7",
		"js-yaml": "^4.1.0",
		"knip": "^5.63.0",
		"markdownlint": "^0.38.0",
		"markdownlint-cli2": "catalog:",
		"msw": "^2.11.1",
		"node-mocks-http": "^1.17.2",
		"oxlint": "^1.14.0",
		"oxlint-tsgolint": "^0.2.0",
		"prettier": "catalog:",
		"snyk": "^1.1299.0",
		"tsx": "^4.20.5",
		"turbo": "^2.5.6",
		"typescript-eslint": "^8.42.0",
		"vitest": "^3.2.4",
		"vitest-mock-extended": "^3.1.0",
		"yaml": "^2.8.1",
		"yaml-lint": "^1.7.0"
	},
	"packageManager": "pnpm@10.14.0",
	"engines": {
		"node": ">=20.19.4",
		"pnpm": ">=10.14.0"
	},
	"pnpm": {
		"overrides": {
			"@smithy/types": "4.3.1",
			"@typescript-eslint/eslint-plugin": "^8.42.0",
			"@typescript-eslint/parser": "^8.42.0"
		}
	},
	"config": {
		"commitizen": {
			"path": "cz-conventional-changelog"
		}
	},
	"dependencies": {
		"zod": "^4.1.5"
	}
}
