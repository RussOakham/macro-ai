#!/usr/bin/env sh
. "$(dirname -- "$0")/_/husky.sh"

# Basic validation for pre-commit (fast checks only)
echo "ğŸ” Running basic validation checks..."

# Check if any workflow files are being committed
if git diff --cached --name-only | grep -q '\.github/workflows/.*\.ya\?ml$'; then
  echo "ğŸ“‹ GitHub Actions workflow files detected, running basic validation..."
  
  # Run only actionlint for syntax validation (fast)
  echo "ğŸ” Running actionlint validation..."
  pnpm security:scan:workflows
  
  if [ $? -ne 0 ]; then
    echo "âŒ Workflow validation failed. Please fix syntax errors before committing."
    exit 1
  fi
  
  echo "âœ… Basic validation passed! Comprehensive security scan will run on push."
else
  echo "â„¹ï¸  No GitHub Actions workflow files in this commit, skipping validation."
fi