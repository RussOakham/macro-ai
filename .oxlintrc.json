{
	"categories": {
		"correctness": "error",
		"suspicious": "warn",
		"perf": "warn",
		"style": "warn"
	},
	"plugins": [
		"typescript",
		"unicorn",
		"import",
		"jsdoc",
		"promise",
		"oxc",
		"node",
		"jest",
		"vitest",
		"react",
		// "react-perf",
		"jsx-a11y"
	],
	"ignorePatterns": [
		"node_modules",
		"dist",
		"build",
		".next",
		".nuxt",
		".output",
		".vercel",
		".netlify",
		"coverage",
		"*.d.ts",
		"tsconfig.json",
		"**/routeTree.gen.ts"
	],
	"env": {
		"node": true,
		"es2022": true,
		"browser": true,
		"vitest": true,
		"jest": true
	},
	"globals": {
		"console": "readonly",
		"process": "readonly",
		"Buffer": "readonly",
		"setTimeout": "readonly",
		"clearTimeout": "readonly",
		"setInterval": "readonly",
		"clearInterval": "readonly",
		"fetch": "readonly",
		"Event": "readonly",
		"File": "readonly",
		"FormData": "readonly",
		"atob": "readonly",
		"btoa": "readonly",
		"module": "readonly",
		"require": "readonly",
		"__dirname": "readonly",
		"__filename": "readonly"
	},
	"rules": {
		// ESLint Core Rules
		"arrow-body-style": "off",
		"curly": "off",
		"eqeqeq": "error",
		"func-style": "off",
		"id-length": "off",
		"max-params": "off",
		"no-magic-numbers": "off",
		"no-ternary": "off",
		"sort-imports": "off",
		"sort-keys": "off",
		"yoda": "off",
		// Type-aware TypeScript rules (run oxlint with --type-aware)
		"typescript/no-unsafe-assignment": "error",
		"typescript/no-unsafe-call": "warn",
		"typescript/no-unsafe-member-access": "warn",
		"typescript/restrict-template-expressions": "warn",
		"typescript/unbound-method": "warn",
		"typescript/no-misused-promises": "warn",
		// import plugin (supported subset)
		"import/no-cycle": "warn",
		"import/no-self-import": "error",
		"import/no-absolute-path": "error",
		"import/no-mutable-exports": "error",
		"import/export": "off",
		"import/prefer-default-export": "off",
		"import/no-default-export": "error",
		"import/group-exports": "off", // TODO: enable this rule
		"import/consistent-type-specifier-style": "off",
		"import/no-namespace": "off",
		"import/no-named-as-default": "off",
		"import/no-anonymous-default-export": "off",
		// unicorn plugin
		"unicorn/filename-case": "off",
		"unicorn/prefer-node-protocol": "error",
		"unicorn/no-process-exit": "error",
		"unicorn/no-null": "off",
		// jsdoc plugin (supported rules)
		"jsdoc/check-tag-names": "off",
		"jsdoc/empty-tags": "off",
		"jsdoc/require-param-name": "error",
		"jsdoc/require-returns-description": "error",
		"jsdoc/require-param": "off",
		"jsdoc/require-param-description": "off", // TODO: enable this rule
		// "jsdoc/require-param-type": "error", // TODO: enable this rule
		// Testing rules - use jest/* (these work with vitest code too)
		"jest/no-disabled-tests": "warn",
		"jest/prefer-to-be": "error",
		"jest/prefer-to-have-length": "error",
		"jest/prefer-lowercase-title": "off",
		// React plugin (supported rules)
		"react/react-in-jsx-scope": "off",
		"react/rules-of-hooks": "error",
		"react/no-array-index-key": "off", // TODO: enable this rule
		// jsx-a11y plugin (supported rules)
		"jsx-a11y/alt-text": "warn",
		"jsx-a11y/no-autofocus": "warn",
		// Temporary disabled rules:
		"unicorn/catch-error-name": "off",
		"jest/no-hooks": "off",
		"jest/require-hook": "off",
		"jest/no-standalone-expect": "off",
		"jest/no-untyped-mock-factory": "off",
		"jest/expect-expect": "off",
		"jest/max-expects": "off",
		"vitest/prefer-to-be-truthy": "off",
		"vitest/prefer-to-be-falsy": "off",
		"jest/no-conditional-expect": "off",
		"jsdoc/require-param-type": "off",
		"promise/no-promise-in-callback": "off",
		"promise/prefer-await-to-callbacks": "off",
		"promise/prefer-await-to-then": "off",
		"import/exports-last": "off",
		"jest/require-top-level-describe": "off",
		"jest/prefer-called-with": "off",
		"jest/prefer-strict-equal": "off",
		"no-await-in-loop": "off",
		"jest/require-to-throw-message": "off",
		"init-declarations": "off",
		"typescript/consistent-indexed-object-style": "off",
		"react/jsx-boolean-value": "off",
		"unicorn/prefer-spread": "off",
		"unicorn/numeric-separators-style": "off",
		"promise/avoid-new": "off",
		"jest/prefer-mock-promise-shorthand": "off",
		"jest/prefer-spy-on": "off",
		"import/first": "off",
		"jest/max-nested-describe": "off",
		"func-names": "off",
		"unicorn/prefer-string-raw": "off",
		"unicorn/no-await-expression-member": "off",
		"unicorn/switch-case-braces": "off",
		"no-nested-ternary": "off",
		"jest/prefer-hooks-in-order": "off",
		"typescript/no-extraneous-class": "off",
		"no-new": "off",
		"no-duplicate-imports": "off",
		"import/no-duplicates": "off",
		"import/no-named-as-default-member": "off",
		"no-unused-vars": "off",
		"unicorn/prefer-optional-catch-binding": "off",
		"typescript/consistent-type-definitions": "off",
		"typescript/consistent-generic-constructors": "off",
		"unicorn/prefer-set-has": "off",
		"no-continue": "off"
	},
	"overrides": [
		{
			"files": [
				"*.config.js",
				"*.config.ts",
				"*.config.mjs",
				"*.config.cjs",
				"*-lint.config.js"
			],
			"rules": {
				"no-console": "off",
				"typescript/no-var-requires": "off",
				"typescript/no-require-imports": "off",
				"jsdoc/require-param": "off",
				"jsdoc/require-returns": "off",
				"no-undef": "off"
			}
		},
		{
			"files": ["*.js", "*.mjs", "*.cjs"],
			"rules": {
				"typescript/no-var-requires": "off",
				"typescript/no-require-imports": "off",
				"typescript/await-thenable": "off",
				"typescript/no-floating-promises": "off",
				"typescript/no-misused-promises": "off"
			}
		},
		{
			"files": [
				"**/**.config.{js,ts}",
				"**/index.{js,ts}",
				"**/main.{js,ts}",
				"**/app.{js,ts}",
				"**/vitest.workspace.{js,ts}",
				"**/tsconfig.json",
				"**/tsconfig.node.json",
				"**/tsconfig.app.json",
				"**/tsconfig.test.json"
			],
			"rules": {
				"import/no-default-export": "off"
			}
		},
		{
			"files": [
				"vitest.config.*",
				"vitest.setup.*",
				"**/vitest.config.*",
				"**/vitest.setup.*",
				"**/*.test.{ts,tsx,js,jsx}",
				"**/*.spec.{ts,tsx,js,jsx}",
				"**/__tests__/**"
			],
			"rules": {
				"no-console": "off",
				"typescript/no-explicit-any": "off",
				"no-undef": "off",
				"typescript/no-non-null-assertion": "off",
				"jsdoc/require-param": "off",
				"jsdoc/require-returns": "off",
				"jsdoc/require-description": "off"
			}
		},
		{
			"files": [
				"$chatId.tsx",
				"routeTree.gen.ts",
				"chat.tsx",
				"chat-interface.tsx",
				"chat-interface-error.tsx",
				"main.tsx"
			],
			"rules": {
				"import/no-cycle": "off"
			}
		},
		{
			// Relax for test files
			"files": [
				"**/*.test.{ts,tsx,js,jsx}",
				"**/*.spec.{ts,tsx,js,jsx}",
				"**/__tests__/**"
			],
			"rules": {
				"promise/avoid-new": "off"
			}
		}
	]
}
