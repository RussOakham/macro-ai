{
	"project": {
		"type": "typescript-monorepo",
		"packageManager": "pnpm",
		"buildSystem": "turbo",
		"infrastructure": "aws-cdk"
	},
	"mcp": {
		"enabled": true,
		"autoMemoryManagement": true,
		"proactiveToolUsage": true,
		"securityFirst": true,
		"preferredServers": [
			"aws-documentation",
			"ref",
			"task-orchestrator",
			"sequentialthinking",
			"memory"
		],
		"alternateServers": {
			"memory": ["acuvity-mcp-server-memory"]
		},
		"dependencyTools": {
			"pulumi": "mcp_pulumi_*",
			"neon": "neon-database",
			"aws": "aws-documentation"
		}
	},
	"workflow": {
		"useSequentialThinking": true,
		"useTaskOrchestrator": true,
		"autoTemplateApplication": true,
		"documentationReference": true,
		"preferCliTools": true,
		"commitConvention": "conventional-commits",
		"useDependencyTools": true,
		"proactiveToolDiscovery": true
	},
	"memory": {
		"autoStoreContext": true,
		"autoRestoreContext": true,
		"storeAfterTasks": true,
		"storeAfterDecisions": true,
		"projectSpecificMemories": ".cursor/memories/"
	},
	"security": {
		"autoSemgrepScan": true,
		"scanAfterChanges": true,
		"createSecurityTasks": true,
		"referenceBestPractices": true,
		"requireSecurityReview": true
	},
	"documentation": {
		"referenceAWS": true,
		"useRefTool": true,
		"validateBestPractices": true,
		"searchBeforeImplementation": true,
		"livingDocumentation": true,
		"noHistoricalNotes": true
	},
	"testing": {
		"framework": "vitest",
		"coverage": "@vitest/coverage-v8",
		"focusOnValueableCases": true,
		"avoidTrivialTests": true,
		"testAllBackendLogic": true,
		"testOnlyHooksInFrontend": true
	},
	"codeStyle": {
		"strictTypeScript": true,
		"preferZodValidation": true,
		"useImportAlias": true,
		"functionalComponents": true,
		"asyncAwaitPreferred": true,
		"usePinoLogging": true,
		"exportFromBarrelFiles": true
	},
	"shell": {
		"osSpecific": {
			"darwin": {
				"defaultShell": "zsh",
				"recommendedSetup": "oh-my-zsh",
				"plugins": ["git", "docker", "aws", "gh", "fzf", "zoxide"],
				"appliesTo": ["all-operations"],
				"availableTools": [
					"gh",
					"aws",
					"docker",
					"pnpm",
					"git",
					"node",
					"npm",
					"npx",
					"zoxide",
					"fzf",
					"bat",
					"fd",
					"jq",
					"yq",
					"doppler",
					"pulumi",
					"kubectl",
					"tree",
					"curl",
					"make",
					"gcc",
					"g++",
					"python3",
					"tsc"
				]
			},
			"win32": {
				"preferBashFor": [
					"pnpm",
					"git",
					"docker",
					"json-processing",
					"file-operations",
					"aws-sam",
					"aws-vault",
					"node",
					"npm",
					"npx"
				],
				"preferPowerShellFor": ["aws-cli", "github-cli"],
				"availableTools": ["git", "node", "npm", "npx", "python"]
			},
			"linux": {
				"defaultShell": "bash",
				"appliesTo": ["all-operations"],
				"availableTools": [
					"git",
					"docker",
					"aws",
					"gh",
					"node",
					"npm",
					"python3"
				]
			}
		},
		"useStructuredOutput": true,
		"avoidPagers": true,
		"preferModernTools": true
	},
	"triage": {
		"prioritizeCliTools": true,
		"requireRealEvidence": true,
		"avoidAssumptions": true,
		"useStructuredApproach": true
	},
	"rules": {
		"projectSpecific": ".cursor/rules/project-rules.md",
		"generic": ".cursor/rules/generic-rules.md"
	}
}
