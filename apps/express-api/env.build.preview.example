# Build-Time Environment Variables for Preview Deployments
# This file contains environment variables needed during the build process
# Copy this file to .env.build.preview and fill in actual values

# Build Configuration
NODE_ENV=production
APP_ENV=pr-123
SERVER_PORT=3040

# API Configuration
API_KEY=your-api-key-here-minimum-32-characters-long
COOKIE_ENCRYPTION_KEY=your-cookie-encryption-key-here-minimum-32-characters-long

# AWS Cognito Configuration
AWS_COGNITO_REGION=us-east-1
AWS_COGNITO_USER_POOL_ID=your-user-pool-id
AWS_COGNITO_USER_POOL_CLIENT_ID=your-client-id
AWS_COGNITO_USER_POOL_SECRET_KEY=your-secret-key
AWS_COGNITO_ACCESS_KEY=your-access-key
AWS_COGNITO_SECRET_KEY=your-secret-key

# Database Configuration
RELATIONAL_DATABASE_URL=your-postgres-connection-string
NON_RELATIONAL_DATABASE_URL=your-nosql-connection-string

# OpenAI Configuration
OPENAI_API_KEY=sk-your-openai-api-key-here

# Rate Limiting Configuration
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
AUTH_RATE_LIMIT_WINDOW_MS=3600000
AUTH_RATE_LIMIT_MAX_REQUESTS=10
API_RATE_LIMIT_WINDOW_MS=60000
API_RATE_LIMIT_MAX_REQUESTS=60

# Optional Configuration
REDIS_URL=your-redis-connection-string
CORS_ALLOWED_ORIGINS=*
COOKIE_DOMAIN=localhost
AWS_COGNITO_REFRESH_TOKEN_EXPIRY=30
