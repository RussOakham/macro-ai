# Production Environment Variables
# This file contains production environment variables for ECS Fargate deployment
# These are injected by CDK at deployment time via Parameter Store

# Production Environment Configuration
NODE_ENV=production
APP_ENV=production
SERVER_PORT=3040

# Deployment Information
BRANCH_NAME=main
PR_NUMBER=

# Database Configuration (Production Branch)
RELATIONAL_DATABASE_URL=postgresql://user_placeholder:password_placeholder@ep-production-placeholder.us-east-1.aws.neon.tech/database_placeholder?channel_binding=require&sslmode=require

# Redis Configuration (Upstash - Production)
REDIS_URL=redis://default:***@global-macro-ai-production-redis.upstash.io:6379

# AWS Cognito Configuration
AWS_COGNITO_REGION=us-east-1
AWS_COGNITO_USER_POOL_ID=${AWS_COGNITO_USER_POOL_ID}
AWS_COGNITO_USER_POOL_CLIENT_ID=${AWS_COGNITO_USER_POOL_CLIENT_ID}
AWS_COGNITO_REFRESH_TOKEN_EXPIRY=30

# Cookie Settings
COOKIE_DOMAIN=api.macro-ai.russoakham.dev
COOKIE_ENCRYPTION_KEY=${COOKIE_ENCRYPTION_KEY}

# API Configuration
API_KEY=${API_KEY}

# OpenAI Configuration
OPENAI_API_KEY=${OPENAI_API_KEY}

# Rate Limiting Configuration (Stricter for production)
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
AUTH_RATE_LIMIT_WINDOW_MS=3600000
AUTH_RATE_LIMIT_MAX_REQUESTS=5
API_RATE_LIMIT_WINDOW_MS=60000
API_RATE_LIMIT_MAX_REQUESTS=30

# CORS Configuration
CORS_ALLOWED_ORIGINS=https://macro-ai.russoakham.dev,https://api.macro-ai.russoakham.dev

# Monitoring (Production has full monitoring)
LOG_LEVEL=warn
ENABLE_DETAILED_LOGGING=true
ENABLE_ERROR_REPORTING=true
