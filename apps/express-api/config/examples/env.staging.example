# Staging Environment Variables
# This file contains staging environment variables for ECS Fargate deployment
# These are injected by CDK at deployment time via Parameter Store

# Staging Environment Configuration
NODE_ENV=production
APP_ENV=staging
SERVER_PORT=3040

# Deployment Information
BRANCH_NAME=staging
PR_NUMBER=

# Database Configuration (Staging Branch)
RELATIONAL_DATABASE_URL=postgresql://user_placeholder:password_placeholder@ep-staging-placeholder.us-east-1.aws.neon.tech/database_placeholder?channel_binding=require&sslmode=require

# Redis Configuration (Upstash - Staging)
REDIS_URL=redis://default:***@global-macro-ai-staging-redis.upstash.io:6379

# AWS Cognito Configuration
AWS_COGNITO_REGION=us-east-1
AWS_COGNITO_USER_POOL_ID=${AWS_COGNITO_USER_POOL_ID}
AWS_COGNITO_USER_POOL_CLIENT_ID=${AWS_COGNITO_USER_POOL_CLIENT_ID}
AWS_COGNITO_REFRESH_TOKEN_EXPIRY=30

# Cookie Settings
COOKIE_DOMAIN=staging-api.macro-ai.russoakham.dev
COOKIE_ENCRYPTION_KEY=${COOKIE_ENCRYPTION_KEY}

# API Configuration
API_KEY=${API_KEY}

# OpenAI Configuration
OPENAI_API_KEY=${OPENAI_API_KEY}

# Rate Limiting Configuration
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
AUTH_RATE_LIMIT_WINDOW_MS=3600000
AUTH_RATE_LIMIT_MAX_REQUESTS=10
API_RATE_LIMIT_WINDOW_MS=60000
API_RATE_LIMIT_MAX_REQUESTS=60

# CORS Configuration
CORS_ALLOWED_ORIGINS=https://staging.macro-ai.russoakham.dev,https://staging-api.macro-ai.russoakham.dev

# Monitoring (Staging has enhanced monitoring)
LOG_LEVEL=info
ENABLE_DETAILED_LOGGING=true
