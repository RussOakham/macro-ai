{
	"name": "@repo/infrastructure",
	"version": "0.0.0",
	"private": true,
	"type": "module",
	"engines": {
		"node": ">=20.0.0",
		"pnpm": ">=9.0.0"
	},
	"description": "AWS CDK infrastructure for Macro AI hobby deployment",
	"scripts": {
		"build": "tsc",
		"watch": "tsc -w",
		"clean": "rm -rf dist lib cdk.out",
		"cdk": "cdk",
		"deploy": "cdk deploy --all --require-approval never",
		"deploy:env": "cdk deploy MacroAi$(echo ${CDK_DEPLOY_ENV:-hobby} | sed 's/./\\U&/')Stack --require-approval never",
		"destroy": "cdk destroy",
		"diff": "cdk diff",
		"synth": "cdk synth",
		"bootstrap": "cdk bootstrap",
		"format": "prettier --check .",
		"format:fix": "prettier --write .",
		"lint": "eslint . --ext .ts,.tsx",
		"lint:fix": "eslint . --ext .ts,.tsx --fix",
		"type-check": "tsc --noEmit",
		"deploy-ec2": "tsx scripts/deploy-ec2.ts",
		"deploy-ec2:github": "scripts/github-actions-deploy.sh"
	},
	"dependencies": {
		"aws-cdk-lib": "^2.161.1",
		"aws-sdk": "^2.1691.0",
		"commander": "^12.1.0",
		"constructs": "^10.3.0",
		"dotenv": "^16.4.5",
		"source-map-support": "^0.5.21"
	},
	"devDependencies": {
		"@repo/config-eslint": "workspace:*",
		"@repo/config-typescript": "workspace:*",
		"@types/node": "catalog:",
		"aws-cdk": "^2.161.1",
		"eslint": "catalog:",
		"eslint-config-prettier": "catalog:",
		"eslint-config-turbo": "^2.5.5",
		"eslint-plugin-simple-import-sort": "^12.1.1",
		"prettier": "^3.6.2",
		"tsx": "catalog:",
		"typescript": "catalog:",
		"typescript-eslint": "^8.39.0"
	}
}
