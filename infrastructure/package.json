{
	"name": "@repo/infrastructure",
	"version": "0.0.0",
	"private": true,
	"type": "module",
	"engines": {
		"node": ">=20.0.0",
		"pnpm": ">=9.0.0"
	},
	"description": "AWS CDK infrastructure for Macro AI hobby deployment",
	"scripts": {
		"build": "tsc",
		"watch": "tsc -w",
		"clean": "rm -rf dist lib cdk.out",
		"cdk": "cdk",
		"deploy": "cdk deploy --all --require-approval never",
		"deploy:env": "cdk deploy MacroAi$(echo ${CDK_DEPLOY_ENV:-hobby} | sed 's/./\\U&/')Stack --require-approval never",
		"destroy": "cdk destroy",
		"diff": "cdk diff",
		"synth": "cdk synth",
		"bootstrap": "cdk bootstrap",
		"format": "prettier --check --cache .",
		"format:fix": "prettier --write --cache .",
		"lint": "eslint . --ext .ts,.tsx",
		"lint:fix": "eslint . --ext .ts,.tsx --fix",
		"lint:ci": "eslint . --ext .ts,.tsx --max-warnings 0",
		"type-check": "tsc --noEmit",
		"test": "npx vitest run",
		"test:watch": "npx vitest",
		"deploy-ec2": "tsx scripts/deploy-ec2.ts",
		"deploy-pipeline": "tsx scripts/deploy-pipeline.ts",
		"deploy-ec2:github": "scripts/github-actions-deploy.sh"
	},
	"dependencies": {
		"aws-cdk-lib": "^2.212.0",
		"constructs": "^10.3.0",
		"source-map-support": "^0.5.21",
		"@aws-sdk/client-cloudwatch": "^3.713.0",
		"@aws-sdk/client-budgets": "^3.713.0",
		"@aws-sdk/client-cost-explorer": "^3.713.0",
		"@aws-sdk/client-ec2": "^3.713.0",
		"@aws-sdk/client-elastic-load-balancing-v2": "^3.713.0"
	},
	"devDependencies": {
		"@repo/config-eslint": "workspace:*",
		"@repo/config-testing": "workspace:*",
		"@repo/config-typescript": "workspace:*",
		"@types/node": "^20.19.4",
		"aws-cdk": "^2.1027.0",
		"eslint": "^9.17.0",
		"globals": "^15.14.0",
		"eslint-config-prettier": "^9.1.0",
		"eslint-plugin-simple-import-sort": "^12.1.1",
		"prettier": "^3.6.2",
		"tsx": "^4.19.2",
		"typescript": "^5.7.2",
		"typescript-eslint": "^8.39.0",
		"vitest": "catalog:"
	}
}
