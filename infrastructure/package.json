{
	"name": "@repo/infrastructure",
	"version": "0.0.0",
	"private": true,
	"type": "module",
	"engines": {
		"node": ">=20.0.0",
		"pnpm": ">=9.0.0"
	},
	"description": "Pulumi infrastructure for Macro AI deployment with ECS Fargate and Doppler",
	"scripts": {
		"build": "tsc",
		"watch": "tsc -w",
		"clean": "rm -rf dist",
		"pulumi": "pulumi",
		"preview": "pulumi preview",
		"up": "pulumi up",
		"destroy": "pulumi destroy",
		"refresh": "pulumi refresh",
		"config": "pulumi config",
		"format": "prettier --check --cache .",
		"format:fix": "prettier --write --cache .",
		"lint": "pnpm oxlint . && eslint . --ext .ts,.tsx",
		"lint:fix": "pnpm oxlint . --fix && eslint . --ext .ts,.tsx --fix",
		"lint:ci": "pnpm oxlint . --max-warnings=0 && eslint . --ext .ts,.tsx --max-warnings 0",
		"lint:oxlint": "pnpm oxlint .",
		"lint:fix:oxlint": "pnpm oxlint . --fix",
		"lint:ci:oxlint": "pnpm oxlint . --max-warnings=0",
		"lint:eslint": "eslint . --ext .ts,.tsx",
		"lint:fix:eslint": "eslint . --ext .ts,.tsx --fix",
		"lint:ci:eslint": "eslint . --ext .ts,.tsx --max-warnings 0",
		"type-check": "tsc --noEmit",
		"test": "vitest run",
		"test:watch": "vitest",
		"deploy-ec2": "tsx scripts/deploy-ec2.ts",
		"deploy-pipeline": "tsx scripts/deploy-pipeline.ts",
		"deploy-ec2:github": "scripts/github-actions-deploy.sh"
	},
	"dependencies": {
		"@dopplerhq/node-sdk": "^1.3.0",
		"@pulumi/aws": "^6.50.0",
		"@pulumi/pulumi": "^3.134.0",
		"source-map-support": "^0.5.21"
	},
	"devDependencies": {
		"@repo/config-eslint": "workspace:*",
		"@repo/config-testing": "workspace:*",
		"@repo/config-typescript": "workspace:*",
		"@types/aws-lambda": "^8.10.129",
		"@types/node": "catalog:",
		"eslint": "catalog:",
		"globals": "catalog:",
		"prettier": "^3.6.2",
		"tsx": "catalog:",
		"typescript": "catalog:",
		"vitest": "catalog:"
	}
}
