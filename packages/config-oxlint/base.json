{
	"$schema": "https://oxc-project.github.io/oxlint/config-schema.json",
	"plugins": [
		"@typescript-eslint",
		"unicorn",
		"import",
		"jsdoc",
		"promise",
		"oxc",
		"react",
		"vitest",
		"jsx-a11y",
		"nextjs"
	],
	"ignorePatterns": [
		"node_modules",
		"dist",
		"build",
		".next",
		".nuxt",
		".output",
		".vercel",
		".netlify",
		"coverage",
		"*.config.js",
		"*.config.ts",
		"*.d.ts"
	],
	"globals": {
		"console": "readonly",
		"process": "readonly",
		"Buffer": "readonly",
		"setTimeout": "readonly",
		"clearTimeout": "readonly",
		"setInterval": "readonly",
		"clearInterval": "readonly",
		"fetch": "readonly",
		"Event": "readonly",
		"File": "readonly",
		"FormData": "readonly",
		"atob": "readonly",
		"btoa": "readonly",
		"module": "readonly",
		"require": "readonly",
		"__dirname": "readonly",
		"__filename": "readonly"
	},
	"overrides": [
		{
			"files": [
				"*.test.ts",
				"*.test.tsx",
				"*.spec.ts",
				"*.spec.tsx",
				"**/__tests__/**"
			],
			"rules": {
				"no-console": "off",
				"@typescript-eslint/no-explicit-any": "off",
				"@typescript-eslint/no-non-null-assertion": "off",
				"jsdoc/require-param": "off",
				"jsdoc/require-returns": "off",
				"jsdoc/require-description": "off"
			}
		},
		{
			"files": [
				"*.config.js",
				"*.config.ts",
				"*.config.mjs",
				"*.config.cjs",
				"*-lint.config.js"
			],
			"rules": {
				"no-console": "off",
				"@typescript-eslint/no-var-requires": "off",
				"@typescript-eslint/no-require-imports": "off",
				"jsdoc/require-param": "off",
				"jsdoc/require-returns": "off",
				"no-undef": "off"
			}
		},
		{
			"files": ["src/**/*.ts", "src/**/*.tsx"],
			"rules": {
				"jsdoc/require-param": "warn",
				"jsdoc/require-returns": "warn",
				"jsdoc/require-description": "warn"
			}
		},
		{
			"files": ["*.js", "*.mjs", "*.cjs"],
			"rules": {
				"@typescript-eslint/no-var-requires": "off",
				"@typescript-eslint/no-require-imports": "off"
			}
		},
		{
			"files": [
				"vitest.config.*",
				"vitest.setup.*",
				"**/vitest.config.*",
				"**/vitest.setup.*"
			],
			"rules": {
				"no-console": "off",
				"@typescript-eslint/no-explicit-any": "off",
				"no-undef": "off"
			}
		},
		{
			"files": [
				"**/eslint.config.{js,ts}",
				"**/vite.config.{js,ts}",
				"**/vitest.config.{js,ts}",
				"**/tailwind.config.{js,ts}",
				"**/postcss.config.{js,ts}",
				"**/next.config.{js,ts}",
				"**/webpack.config.{js,ts}",
				"**/rollup.config.{js,ts}",
				"**/index.{js,ts}",
				"**/main.{js,ts}",
				"**/app.{js,ts}"
			],
			"rules": {
				"import-x/no-default-export": "off"
			}
		}
	]
}
