{
	"$schema": "http://json.schemastore.org/package",
	"name": "@repo/config-eslint",
	"license": "MIT",
	"private": "true",
	"version": "0.0.0",
	"type": "module",
	"engines": {
		"node": ">=20.0.0",
		"pnpm": ">=9.0.0"
	},
	"scripts": {
		"format": "prettier --write ./src/**/*.js",
		"format:check": "prettier --check ./src/**/*.js",
		"format:fix": "prettier --write ./src/**/*.js",
		"lint": "pnpm oxlint ./src/**/*.js && eslint ./src/**/*.js",
		"lint:fix": "pnpm oxlint ./src/**/*.js --fix && eslint ./src/**/*.js --fix",
		"lint:ci": "pnpm oxlint ./src/**/*.js --max-warnings=0 && eslint ./src/**/*.js --max-warnings 0",
		"lint:oxlint": "pnpm oxlint ./src/**/*.js",
		"lint:fix:oxlint": "pnpm oxlint ./src/**/*.js --fix",
		"lint:ci:oxlint": "pnpm oxlint ./src/**/*.js --max-warnings=0",
		"lint:eslint": "eslint ./src/**/*.js",
		"lint:fix:eslint": "eslint ./src/**/*.js --fix",
		"lint:ci:eslint": "eslint ./src/**/*.js --max-warnings 0",
		"lint:ci:fix": "pnpm oxlint ./src/**/*.js --fix && eslint ./src/**/*.js --max-warnings 0 --fix"
	},
	"files": [
		"./src/**/*.js",
		"./index.js",
		"./index.d.ts"
	],
	"exports": {
		".": {
			"types": "./index.d.ts",
			"import": "./index.js"
		},
		"./index": {
			"types": "./index.d.ts",
			"import": "./index.js"
		}
	},
	"types": "./index.d.ts",
	"publishConfig": {
		"access": "public"
	},
	"devDependencies": {
		"@eslint/js": "^9.32.0",
		"eslint": "catalog:",
		"eslint-config-turbo": "catalog:",
		"eslint-plugin-react-compiler": "catalog:",
		"eslint-plugin-react-refresh": "catalog:",
		"eslint-plugin-unused-imports": "catalog:",
		"eslint-plugin-vitest": "catalog:",
		"eslint-plugin-testing-library": "catalog:",
		"eslint-plugin-security": "catalog:",
		"eslint-plugin-security-node": "catalog:",
		"eslint-plugin-no-secrets": "catalog:",
		"eslint-plugin-eslint-comments": "catalog:",
		"eslint-plugin-array-func": "catalog:",
		"eslint-plugin-perfectionist": "catalog:",
		"eslint-plugin-sonarjs": "catalog:",
		"globals": "catalog:",
		"prettier": "catalog:",
		"typescript": "catalog:",
		"typescript-eslint": "catalog:"
	}
}
