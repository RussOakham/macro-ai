{
	"extends": "../../../packages/config-typescript/tsconfig-base.json",
	"compilerOptions": {
		"module": "NodeNext",
		"moduleResolution": "NodeNext",
		"target": "ES2022",
		"lib": ["ES2022"],
		"outDir": "../dist/scripts",
		"rootDir": ".",
		"types": ["node"],
		"skipLibCheck": true,
		"esModuleInterop": true,
		"resolveJsonModule": true,
		"allowSyntheticDefaultImports": true
	},
	"include": ["./**/*.ts"],
	"exclude": ["node_modules", "eslint.config.mjs", "dist"]
}
