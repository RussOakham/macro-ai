{
	"name": "@repo/macro-ai-api-client",
	"version": "0.0.1",
	"private": true,
	"type": "module",
	"engines": {
		"node": ">=20.0.0",
		"pnpm": ">=9.0.0"
	},
	"main": "./dist/index.js",
	"module": "./dist/index.js",
	"types": "./dist/index.d.ts",
	"scripts": {
		"build": "pnpm generate && tsup",
		"dev": "pnpm generate && tsup --watch",
		"clean": "rm -rf dist && rm -rf src/client",
		"type-check": "tsc --noEmit",
		"generate": "( [ \"$ACT_LOCAL\" = \"true\" ] && echo \"Skipping API client generation in act environment\" || [ \"$SKIP_CONFIG_VALIDATION\" = \"true\" ] && echo \"Skipping API client generation in Docker build\" || (cd ../../apps/express-api && pnpm generate-swagger && cd ../../packages/macro-ai-api-client && openapi-ts) )",
		"format": "prettier --check --cache .",
		"format:fix": "prettier --write --cache .",
		"lint": "pnpm oxlint . && eslint .",
		"lint:fix": "pnpm oxlint . --fix && eslint . --fix",
		"lint:ci": "pnpm oxlint . --max-warnings=0 && eslint . --max-warnings 0",
		"lint:oxlint": "pnpm oxlint .",
		"lint:fix:oxlint": "pnpm oxlint . --fix",
		"lint:ci:oxlint": "pnpm oxlint . --max-warnings=0",
		"lint:eslint": "eslint .",
		"lint:fix:eslint": "eslint . --fix",
		"lint:ci:eslint": "eslint . --max-warnings 0",
		"test": "vitest run",
		"test:watch": "vitest",
		"test:coverage": "vitest run --coverage"
	},
	"devDependencies": {
		"@hey-api/openapi-ts": "^0.82.3",
		"oxlint": "catalog:",
		"oxlint-tsgolint": "catalog:",
		"@repo/config-eslint": "workspace:*",
		"@repo/config-testing": "workspace:*",
		"@repo/config-typescript": "workspace:*",
		"@types/node": "catalog:",
		"@vitest/coverage-v8": "catalog:",
		"eslint": "catalog:",
		"eslint-plugin-unused-imports": "catalog:",
		"eslint-plugin-vitest": "catalog:",
		"globals": "catalog:",
		"prettier": "catalog:",
		"tsup": "^8.5.0",
		"tsx": "catalog:",
		"typescript": "catalog:",
		"vitest": "catalog:"
	},
	"dependencies": {
		"axios": "^1.11.0"
	},
	"exports": {
		".": {
			"import": "./dist/index.js"
		}
	}
}
