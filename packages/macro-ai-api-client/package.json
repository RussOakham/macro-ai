{
	"name": "@repo/macro-ai-api-client",
	"version": "0.0.1",
	"private": true,
	"type": "module",
	"main": "./dist/index.cjs",
	"module": "./dist/index.js",
	"types": "./dist/index.d.ts",
	"scripts": {
		"build": "tsup",
		"dev": "tsup --watch",
		"clean": "rm -rf dist && find src -type f \\( -name '*.ts' -o -name '*.js' \\) ! -name 'index.ts' -delete",
		"type-check": "tsc --noEmit",
		"generate": "cd ../../apps/express-api && pnpm generate-swagger && cd ../../packages/macro-ai-api-client && tsx --tsconfig scripts/tsconfig.json scripts/generate-modular.ts",
		"test": "vitest run",
		"test:watch": "vitest",
		"lint": "eslint ."
	},
	"devDependencies": {
		"@apidevtools/swagger-parser": "^10.1.1",
		"@repo/config-typescript": "workspace:*",
		"@repo/config-eslint": "workspace:*",
		"@types/node": "catalog:",
		"eslint": "catalog:",
		"eslint-config-prettier": "catalog:",
		"eslint-plugin-import": "catalog:",
		"eslint-plugin-react": "catalog:",
		"eslint-plugin-react-hooks": "catalog:",
		"eslint-plugin-jsx-a11y": "catalog:",
		"eslint-plugin-unused-imports": "catalog:",
		"globals": "^15.15.0",
		"openapi-zod-client": "^1.15.0",
		"prettier": "catalog:",
		"tsup": "^8.0.0",
		"tsx": "^4.7.0",
		"typescript": "catalog:",
		"vitest": "catalog:"
	},
	"dependencies": {
		"@zodios/core": "^10.9.6",
		"openapi3-ts": "^3.0.2",
		"zod": "^3.24.1"
	},
	"exports": {
		".": {
			"import": "./dist/index.js",
			"require": "./dist/index.cjs"
		}
	}
}
