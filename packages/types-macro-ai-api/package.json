{
	"name": "@repo/types-macro-ai-api",
	"version": "0.0.1",
	"private": true,
	"type": "module",
	"main": "./dist/index.js",
	"module": "./dist/index.mjs",
	"types": "./dist/index.d.ts",
	"scripts": {
		"build": "pnpm generate && tsup",
		"dev": "tsup --watch",
		"clean": "rm -rf dist src/*.{ts,js} src/*/*.{ts,js}",
		"typecheck": "tsc --noEmit",
		"generate": "cd ../../apps/express-api && pnpm generate-swagger && cd ../../packages/types-macro-ai-api && tsx --tsconfig scripts/tsconfig.json scripts/generate.ts",
		"lint": "eslint ."
	},
	"devDependencies": {
		"@apidevtools/swagger-parser": "^10.1.1",
		"@repo/config-typescript": "workspace:*",
		"@repo/config-eslint": "workspace:*",
		"@types/express": "^5.0.0",
		"@types/glob": "^8.1.0",
		"@types/node": "^22.7.9",
		"eslint": "^9.19.0",
		"globals": "^15.14.0",
		"glob": "^10.3.10",
		"openapi-zod-client": "^1.15.0",
		"prettier": "^3.3.3",
		"tsup": "^8.0.0",
		"tsx": "^4.7.0",
		"typescript": "^5.5.3"
	},
	"dependencies": {
		"@zodios/core": "^10.9.6",
		"openapi3-ts": "^3.0.2",
		"zod": "^3.24.1"
	}
}
